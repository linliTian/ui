{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "outDir": "lib",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules",
    "src/**/*.stories.tsx",
    "src/**/story.components.tsx",
    "docs/*"
  ]
}
